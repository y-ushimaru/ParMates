#----------------------------------------------------------------------
#
# Mersenne Twister : a pseudorandom number generator
#
#----------------------------------------------------------------------
#
# Using cmake is recommended if possible. This is an alternative Makefile.

#----------------------------------------------------------------------
CC = gcc
AR = ar

#----------------------------------------------------------------------
# compile options

CFLAGS = -g -Wall
#CFLAGS = -DNDEBUG -O3

ARFLAGS = crsv

#----------------------------------------------------------------------
.SUFFIXES : .c

.c.o:
	${CC} -c $< ${CFLAGS}

#----------------------------------------------------------------------
all : libmt19937.a

mt19937ar.o : mt19937ar.h mt19937ar.c

libmt19937.a : mt19937ar.o
	${AR} ${ARFLAGS} $@ $^

mtTest : mtTest.o libmt19937.a 
	${CC} -o $@ $^

#----------------------------------------------------------------------
clean :
	rm -f *.o *.a mtTest

